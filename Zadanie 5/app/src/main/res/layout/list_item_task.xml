<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/main_list_layout_style"
    >

    <View
        android:layout_width="match_parent"
        style="@style/view_style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/main_list_second_layout_style"
        >
        <CheckBox
            android:id="@+id/is_task_done_checkbox"
            style="@style/checkbox_style"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/is_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaaaa"
                style="@style/is_done_text_view_style"/>

            <TextView
                android:id="@+id/task_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAAAAAA"
                style="@style/task_name" />
        </LinearLayout>

        <ImageView
            android:id="@+id/category_icon"
            tools:srcCompat="@drawable/ic_house"
            style="@style/image_style"/>

    </LinearLayout>
    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/date_text_view"/>
    <View
        android:layout_width="match_parent"
        style="@style/view_style"/>

</LinearLayout>
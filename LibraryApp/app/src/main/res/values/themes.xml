<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LibraryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LibraryApp" parent="Base.Theme.LibraryApp" />

    <style name="coordinator_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark_gray</item>
    </style>
    <style name="constraint_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/coordinator_layout_margin_top</item>
        <item name="android:background">@color/dark_gray</item>
    </style>
    <style name="floating_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>
    <style name="topbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blue</item>
        <item name="android:padding">@dimen/topbar_padding</item>
    </style>
    <style name="logo_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/logo_size</item>
    </style>
    <style name="item_holder_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/item_holder_margin</item>
        <item name="android:layout_marginRight">@dimen/item_holder_margin</item>
    </style>
    <style name="view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray</item>
        <item name="android:paddingTop">@dimen/item_layout_padding</item>
        <item name="android:paddingBottom">@dimen/item_layout_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="image_view_style">
        <item name="android:layout_width">@dimen/image_view_height_width</item>
        <item name="android:layout_height">@dimen/image_view_height_width</item>
        <item name="android:layout_marginLeft">@dimen/item_layout_padding</item>
        <item name="android:layout_marginRight">@dimen/item_layout_padding</item>
        <item name="android:padding">@dimen/image_view_padding</item>
    </style>
    <style name="author_title_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/author_title_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="main_edit_add_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="second_edit_add_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/edit_add_layout_margin</item>
        <item name="android:layout_marginLeft">@dimen/edit_add_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/edit_add_layout_margin</item>
    </style>
    <style name="edit_add_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/edit_add_textview_padding</item>
        <item name="android:paddingBottom">@dimen/edit_add_textview_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/edit_add_textview_size</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/edit_view_size</item>
    </style>
    <style name="save_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/edit_view_size</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">@dimen/edit_view_size</item>
        <item name="android:background">@color/buttonColor</item>
    </style>
</resources>